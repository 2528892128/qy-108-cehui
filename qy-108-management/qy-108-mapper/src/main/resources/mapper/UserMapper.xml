  <select id="selectUserBySsex" resultMap="BaseResultMap">
    select id,username,ssex,email,dept_id,mobile,status,create_time
    from t_user
    where ssex= #{ssex,jdbcType=CHAR}
  </select>

  <select id="selectUserBySta" resultMap="BaseResultMap">
     select id,username,ssex,email,dept_id,mobile,status,create_time
    from t_user
    where status= #{status,jdbcType=CHAR}
  </select>

  <select id="selectUserByField" resultMap="BaseResultMap" parameterType="com.aaa.xj.model.User">
    SELECT id,username,ssex,email,dept_id,mobile,status,create_time
    from t_user
    <where>
      1=1
      <if test="username != null and username != ''">
        AND username=#{username, jdbcType=VARCHAR}
      </if>
      <if test="deptId != null and deptId != '' ">
        AND dept_id=#{deptId, jdbcType=BIGINT}
      </if>
      <if test="beginDate !=null and beginDate !=''">
        and create_time >= #{beginDate} and #{endDate} >= create_time
      </if>
    </where>
    ORDER BY id ASC

  </select>

</mapper>